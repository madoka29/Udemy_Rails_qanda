<!DOCTYPE html>
<!-- 各ページで共通に使用されるレイアウト -->
<html>
  <head>
    <title>Qanda</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if flash[:notice] #成功メッセージがある場合 %>
        <p class="text-success"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert] #アラートメッセージがある場合 %>
        <p class="text-danger"><%= flash[:alert] %></p>
      <% end %>
      <!-- yeildにindex.html.erbなどが入る -->
      <%= yield %>
    </div>
  </body>
</html>
